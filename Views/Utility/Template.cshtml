@model XCoreAssignment.ViewModels.Utility.UtilityTemplateVM

<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<form method="post" asp-action="Pay" asp-controller="Utility">
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card p-4 shadow-lg rounded-3 animate__animated animate__fadeInUp" style="max-width: 1200px;width:1180px">
            <h1 class="fw-bold text-center mb-4" style="font-family: 'Montserrat', sans-serif; font-size: 2rem;">Send money</h1>
            <br />

            <div class="d-flex justify-content-center gap-5">
                <div class="w-100 d-grid gap-3">

                    <h4><b><center>Sender</center></b></h4>

                    <div class="form-floating">
                        <select asp-for="DebtorAccountId" class="form-select" placeholder="Account">
                            <option value="null">--- Choose ---</option>
                            @foreach (var acc in Model.DebtorAccounts)
                            {
                                    <option value="@acc.Id">@acc.Account</option>
                            }
                        </select>
                        <label asp-for="DebtorAccountId"></label>
                        <span class="text-danger" asp-validation-for="DebtorAccountId"></span>
                    </div>

                    <div class="form-floating">
                        <input class="form-control" asp-for="DebtorName" placeholder="Name">
                        <label asp-for="DebtorName"></label>
                        <span class="text-danger" asp-validation-for="DebtorName"></span>
                    </div>

                    <div class="form-floating">
                        <input class="form-control" asp-for="DebtorAddressLine" placeholder="Address line">
                        <label asp-for="DebtorAddressLine"></label>
                        <span class="text-danger" asp-validation-for="DebtorAddressLine"></span>
                    </div>

                    <div class="form-floating">
                        <input class="form-control" asp-for="DebtorCity" placeholder="City">
                        <label asp-for="DebtorCity"></label>
                        <span class="text-danger" asp-validation-for="DebtorCity"></span>
                    </div>




                </div>

                <div class="w-100 d-grid gap-3">
                    <h4><b><center>Amount</center></b></h4>

                    <div class="form-floating">
                        <input class="form-control" asp-for="Amount" placeholder="Amount">
                        <label asp-for="Amount"></label>
                        <span class="text-danger" asp-validation-for="Amount"></span>
                    </div>

                    <div class="form-floating">
                        <input class="form-control" asp-for="CurrencyCode" placeholder="Currency code">
                        <label asp-for="CurrencyCode"></label>
                        <span class="text-danger" asp-validation-for="CurrencyCode"></span>
                    </div>

                    <div class="form-floating">
                        <input class="form-control" asp-for="PurposeCode" placeholder="Purpose code">
                        <label asp-for="PurposeCode"></label>
                        <span class="text-danger" asp-validation-for="PurposeCode"></span>
                    </div>

                    <div class="form-floating">
                        <input class="form-control" asp-for="PaymentDescription" placeholder="Payment description">
                        <label asp-for="PaymentDescription"></label>
                        <span class="text-danger" asp-validation-for="PaymentDescription"></span>
                    </div>

                </div>

                <div class="w-100 d-grid gap-3">
                    <h4><b><center>Receiver</center></b></h4>

                    <div class="form-floating">
                        <input class="form-control" asp-for="CreditorAccount" placeholder="Account">
                        <label asp-for="CreditorAccount"></label>
                        <span class="text-danger" asp-validation-for="CreditorAccount"></span>
                    </div>

                    <div class="form-floating">
                        <input class="form-control" asp-for="CreditorName" placeholder="Name">
                        <label asp-for="CreditorName"></label>
                        <span class="text-danger" asp-validation-for="CreditorName"></span>
                    </div>

                    <div class="form-floating">
                        <input class="form-control" asp-for="CreditorAddressLine" placeholder="Address line">
                        <label asp-for="CreditorAddressLine"></label>
                        <span class="text-danger" asp-validation-for="CreditorAddressLine"></span>
                    </div>

                    <div class="form-floating">
                        <input class="form-control" asp-for="CreditorCity" placeholder="City">
                        <label asp-for="CreditorCity"></label>
                        <span class="text-danger" asp-validation-for="CreditorCity"></span>
                    </div>



                </div>

                <div class="w-100 d-flex flex-column gap-3">
                    <h4><b><center>Reference</center></b></h4>

                    <div class="form-floating">
                        <input class="form-control" asp-for="CreditorReference" placeholder="Reference">
                        <label asp-for="CreditorReference"></label>
                        <span class="text-danger" asp-validation-for="CreditorReference"></span>
                    </div>

                    <div class="form-floating">
                        <input class="form-control" asp-for="CreditorReferenceModel" placeholder="Reference model">
                        <label asp-for="CreditorReferenceModel"></label>
                        <span class="text-danger" asp-validation-for="CreditorReferenceModel"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4 gap-5">
                <div class="w-100"></div>
                <div class="w-100"></div>
                <div class="w-100"></div>
                <button id="proceed" class="btn btn-primary w-100">Proceed</button>
            </div>

        </div>
    </div>
</form>